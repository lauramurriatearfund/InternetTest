@model MvcMovie.Models.Partner

@using MvcMovie.Models;
@using MvcMovie.Resources;
@{
    ViewBag.Title = Resources.SubmitTitle;
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();

}
@helper selected(string c, string culture)
{
if (c == culture)
{
        @:checked="checked"
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        (function ($) {
            $("input[type = 'radio']").click(function () {
                $(this).parents("form").submit(); // post form
            });

        })(jQuery);
    </script>
}


<script>
    var startTime = new Date().getTime();

    function onLoadEventHandler() {
        var latency = new Date().getTime() - startTime;
        console.log('Latency = ' + latency + 'ms');
    }
</script>

<div class="row">
    Current culture:  @System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
    <div class="col-md-12">
        <a href="@Url.Action("Display", "HelloWorld")">
            <image src="/Content/images/back_button.png" width="70" height="70" valign="top" alt="@Resources.Back"></image>
        </a>

        <span class="pull-right">

            <input type="image" src="/Content/images/forward_button.png" width="70" height="70" valign="top" alt="@Resources.Continue" />

        </span>
    </div>
</div>
<p>
    @Resources.EnterDesc
 
</p>
<div class="row">

    @using (Html.BeginForm("SetCulture", "HelloWorld"))
    {
        <fieldset>
            <div class="col-md-2">
                <div class="control-group"><b>@Resources.ChooseYourLanguage</b></div>
            </div>
            <div class="col-md-10">
                <div class="control-group">
                    <div class="controls">
                        <label for="en-us">
                            <input name="culture" id="en-us" value="en-us" type="radio" @selected("en-us", culture) /> English
                        </label>
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <label for="es">
                            <input name="culture" id="es" value="es" type="radio" @selected("es", culture) /> Español
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>

    }

</div>
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.partnerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.partnerName, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.partnerName, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <br />
            @Html.LabelFor(model => model.partnerRef, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.partnerRef, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.partnerRef, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <br />
            @Html.LabelFor(model => model.country, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.country, Partner.COUNTRIES)
            </div>



        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-12">
            <a href="@Url.Action("Display", "HelloWorld")">
                <image src="/Content/images/back_button.png" width="70" height="70" valign="top" alt="@Resources.Back"></image>
            </a>
            <span class="pull-right">
                <a href="@Url.Action("Submit", "HelloWorld")">
                    <image src="/Content/images/forward_button.png" width="70" height="70" valign="top" alt="@Resources.Continue"></image>
                </a>
            </span>
        </div>
    </div>
}
